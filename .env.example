# Application Configuration
APP_NAME=Terra-Allwert-API
APP_VERSION=1.0.0
APP_ENV=development
APP_PORT=3000
APP_DEBUG=true
APP_GRACEFUL_TIMEOUT=30s

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=apiuser
DB_PASSWORD=apipass
DB_NAME=terraallwert
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5
REDIS_MAX_RETRIES=3

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# API Keys
API_KEY=your-external-api-key
API_SECRET=your-external-api-secret
API_BASE_URL=https://api.external-service.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_EXPIRATION=1m
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=logs/app.log

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@terraallwert.com

# AWS Configuration (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL=1h
SCHEDULER_RETRY_ATTEMPTS=3
SCHEDULER_RETRY_DELAY=5s

# Feature Flags
FEATURE_USER_REGISTRATION=true
FEATURE_SOCIAL_LOGIN=false
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_API_RATE_LIMIT=true

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30s
WEBHOOK_MAX_RETRIES=3

# Cache Configuration
CACHE_TTL=5m
CACHE_ENABLED=true
CACHE_PREFIX=terra:

# Security
BCRYPT_COST=10
SESSION_LIFETIME=24h
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m

# Storage Configuration (MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_USE_SSL=false
MINIO_BUCKET=terra-allwert
MINIO_REGION=us-east-1

# External Services
PAYMENT_GATEWAY_URL=
PAYMENT_GATEWAY_KEY=
NOTIFICATION_SERVICE_URL=
ANALYTICS_SERVICE_KEY=